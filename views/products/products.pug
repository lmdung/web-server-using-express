extends ../layouts/common
block content
    h1 
        span Products
        form.ml-auto(action="" class="d-flex justify-content-end")
            input.col-md-2(type="text" name="q" class="form-control" placeholder="Tìm theo tên")
            button(class="btn btn-primary ml-2") Search
    h2=products.name
    .row
        each product in products
            .col-md-3(style="margin-bottom: 2rem;")
                .card.mb-3.shadow-sm
                    img(src=product.images)
                    rect(width='100%', height='100%', fill='#55595c')
                    h5.card-title=product.name
                .card-body
                    p.card-text(style="margin-top: -2rem; margin-left: -1rem;")= product.description
                    .d-flex.justify-content-between.align-items-center
                    a.btn.btn-md.btn-primary(style="margin-left: -1rem;" href="/cart/add/" + product.id) Add to card

    nav(aria-label='Page navigation example')
        ul.pagination.justify-content-center
            li.page-item
                a.page-link(href='#', aria-label='Previous')
                    span(aria-hidden='true') &laquo;
            li.page-item
                a.page-link(href='#') 1
            li.page-item
                a.page-link(href='#') 2
            li.page-item
                a.page-link(href='#') 3
            li.page-item
                a.page-link(href='#', aria-label='Next')
                    span(aria-hidden='true') &raquo;                     
        