extends ../layouts/common
block content
    h1 Create User
    if errors 
        each error in errors
            .alert.alert-danger=error
    form(action="/users/create" method="POST" enctype="multipart/form-data")
        .form-group
            label(for="newName") Name
            input.form-control(type="text" name="name" id="newName" value=values ? values.name : "")
        .form-group
            label(for="newPhone") Phone
            input.form-control(type="text" name="phone" id="newPhone" value=values ? values.phone : "")
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(type="file" name="avatar")
        button.btn.btn-primary Create