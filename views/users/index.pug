extends ../layouts/common
block content
    nav(class="navbar navbar-expand-lg navbar-light bg-light")
        div(class="collapse navbar-collapse")
            ul(class="navbar-nav")
                li(class="nav-item active")
                    a(class="nav-link" href="/") Home
                li(class="nav-item")
                    a(class="nav-link", href="/users/create") Create User
    h1 User list
    form(action="/users/search" class="form-group d-flex")
        input(type="text" name="q" class="form-control col-md-2 ")
        button(class="btn btn-primary") Search
    ul 
        each user in users
            li
                span= user.name
                span &nbsp
                a(href="/users/"+ user.id) View
