extends ../layouts/common
block content
    h1 
        span User list
        a.btn.btn-primary.ml-2(href="/users/create") New user
    .d-flex.align-items-center
        form.ml-auto(action="/users/search" class="d-flex")
            input(type="text" name="q" class="form-control" placeholder="Tìm theo tên")
            button(class="btn btn-primary ml-2") Search
    table.table 
        tr  
            th Avarta
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src=user.avatar,width="35")
                td= user.name
                td= user.phone
                td  
                    a.btn.btn-info(href="/users/"+ user.id) View
